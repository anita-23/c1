#從0~100，亂數產生n個整數，且每次皆不重複。輸出最大、小值及平均值(整數)

#include <stdio.h>
#include<stdlib.h>
#include<time.h>

void randarray(int[],int n);
void arrayprint(int[],int n);
int maxarray(int[],int n);
int minarray(int v[],int n);
int medianarray(int v[],int n);

int main(){
    srand(time(0));
    int n;
    int i;
    int v[100]={0};
    printf("請輸入陣列大小:");
    scanf("%d",&n);
    randarray(v,n);
    arrayprint(v,n);
    printf("最大值為:%d\n",maxarray(v,n));
    printf("最小值為:%d\n",minarray(v,n));
    printf("平均值(整數)為:%d\n",medianarray(v,n));
    return 0;
}

void randarray(int v[],int n){
     int i;
     for(i=0;i<n;i++){
        v[i]=rand()%100+1;
     }
}

void arrayprint(int v[],int n){
    int i;
    for(i=0;i<n;i++){
        printf("%d ",v[i]);
    }
    printf("\n");
}

int maxarray(int v[],int n){
    int i;
    int max=v[0];
    for(i=1;i<n;i++){
        if(v[i]>max){
            max=v[i];
        }
    }
    return max;
}

int minarray(int v[],int n){
    int i;
    int min=v[0];
    for(i=1;i<n;i++){
        if(v[i]<min){
            min=v[i];
        }
    }
    return min;
}

int medianarray(int v[],int n){
    int i;
    int sum=0;
    int median=v[0];
    for(i=1;i<n;i++){
        sum=sum+v[i];
        }
    median=(sum+v[0])/n;
    return median;
}
